<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/time_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEllo"
        android:textSize="30dp"
        tools:text="Time_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/latitude_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DOG"
        tools:text="Latitude_item"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/time_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/longitude_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MDLK"
        tools:text="Longitude_item"

        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/latitude_item"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>